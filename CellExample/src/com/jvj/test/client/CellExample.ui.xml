<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
	.label {
		font-size: 20px;
		font-weight: bold;
		border-bottom: 2px solid black;
	}
	
	.cellListContainer {
		border: 1px solid black;
		padding: 5px;
	}
	
	.spacedBox {
		padding: 10px;
	}
	</ui:style>

	<g:HorizontalPanel>

		<g:VerticalPanel styleName='{style.spacedBox}'>
			<g:Label styleName='{style.label}'>Basic Rendering</g:Label>
			<g:HTMLPanel styleName='{style.cellListContainer}' width="250px"
				height="300px" ui:field="basicContainer" />
		</g:VerticalPanel>

		<g:VerticalPanel styleName='{style.spacedBox}'>
			<g:Label styleName='{style.label}'>UiRenderer Rendering</g:Label>
			<g:HTMLPanel styleName='{style.cellListContainer}' width="250px"
				height="300px" ui:field="uiRendererContainer" />
		</g:VerticalPanel>

		<g:Label styleName='{style.label}' ui:field="info" />

	</g:HorizontalPanel>

</ui:UiBinder> 